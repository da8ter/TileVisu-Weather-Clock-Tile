{
  "elements": [
    {
      "type": "ValidationTextBox",
      "name": "PageUrl",
      "caption": "BBC Standort-URL"
    },
    {
      "type": "NumberSpinner",
      "name": "IntervalSeconds",
      "caption": "Intervall (Sekunden)",
      "minimum": 300,
      "suffix": "s"
    },
    {
      "type": "SelectVariable",
      "name": "TemperatureVariableID",
      "caption": "Temperatur-Variable",
      "filterVariableTypes": [1, 2],
      "showValueButton": true
    },
    {
      "type": "SelectVariable",
      "name": "ForecastVariableID",
      "caption": "Wunderground Forecast-Variable",
      "filterVariableTypes": [3],
      "showValueButton": true
    },
    {
      "type": "CheckBox",
      "name": "UseCSSResolver",
      "caption": "CSS-Resolver verwenden (empfohlen)",
      "value": true
    },
    {
      "type": "CheckBox",
      "name": "AllowInsecureTLS",
      "caption": "TLS-Zertifikatspr√ºfung (nur bei Problemen deaktivieren)",
      "value": false
    }
  ],
  "actions": [
    {
      "type": "Button",
      "caption": "Jetzt aktualisieren",
      "onClick": "BBCWI_UpdateNow($id);"
    }
  ]
}
